<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" tools:layout_editor_absoluteY="81dp" android:orientation="vertical"
        android:background="#ec797272">

    <TextView
            android:text="@string/app_name"
            android:layout_width="match_parent"
            android:textColor="#ffffff"
            android:layout_height="?attr/actionBarSize" android:id="@+id/textView"
            android:gravity="center" android:textSize="24sp" android:background="#4d934d"/>
    <LinearLayout
            style="@style/line">
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:layout_weight="1" android:hint="5000 e.g."
                android:textAlignment="center" android:id="@+id/main"
                android:textColorHint="#d9c4c4" android:textColor="#fff"/>
        <TextView
                android:text="@string/main_money"
                android:id="@+id/textView6" android:layout_height="wrap_content" android:layout_width="wrap_content"
                style="@style/li"/>
    </LinearLayout>
    <LinearLayout
            style="@style/line">
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:textColor="#fff"
                android:id="@+id/inc" android:layout_weight="1" android:hint="50 without %"
                android:textAlignment="center" android:textColorHint="#d9c4c4"/>
        <TextView
                android:text="@string/increment_value"
                android:id="@+id/textView7" android:layout_height="wrap_content" android:layout_width="wrap_content"
                style="@style/li"/>
    </LinearLayout>
    <LinearLayout
            style="@style/line">
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:textColor="#fff"
                android:ems="10"
                android:id="@+id/yrs" android:layout_weight="1" android:hint="10 e.g." android:textAlignment="center"
                android:textColorHint="#d9c4c4"/>
        <TextView
                android:text="@string/years"
                android:id="@+id/textView8" android:layout_height="wrap_content" android:layout_width="wrap_content"
                style="@style/li"/>
    </LinearLayout>
    <Button
            android:text="@string/calc"
            android:layout_width="match_parent"
            android:background="#2f2fff"
            android:textColor="#fff"
            android:layout_height="wrap_content" android:id="@+id/calc" android:layout_margin="30dp"/>
    <TextView
            android:text="@string/gg"
            android:id="@+id/money"
            style="@style/moent" android:textSize="24sp"/>
</LinearLayout>